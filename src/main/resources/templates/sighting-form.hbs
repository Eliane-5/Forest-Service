{{#partial "content"}}
    <h3>Add a Sighting!</h3>
    <form style="color:white;" action="/sight/new" method="post">
        <div class="form-group">
            <label for="location">Location:</label><br>
            <input class="form-control" id="location" name="location" type="text"><br>
        </div>
        <div class="form-group">
             <label for="rangerName">Ranger's Name:</label><br>
             <input class="form-control" id="rangerName" name="rangerName" type="text"><br>
        </div>
        <div class="form-group">
             <label for="animalName">Select animal name:</label><br>
             <select class="form-control" name="animalName">
                {{#each endangeredAnimal}}
                    <option>{{name}}</option>
                {{/each}}
                {{#each animal}}
                    <option>{{name}}</option>
                {{/each}}
             </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">ADD</button>
        </div>
    </form>
{{/partial}}
<style>
    body{
        background-image: url("https://outdoorarrow.com/wp-content/uploads/2018/06/Best-binocular-under-100.jpg");
        background-repeat: no-repeat;
        background-size:cover;
    }
</style>
